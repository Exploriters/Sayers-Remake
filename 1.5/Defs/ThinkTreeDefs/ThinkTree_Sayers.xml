            <li Class="ThinkNode_ChancePerHour_Nuzzle">
              <subNodes>
                <li Class="ThinkNode_Tagger">
                  <tagToGive>Misc</tagToGive>
                  <subNodes>
					<li Class="SayersRemake.JobGiver_Nuzzle_Humanoid" />
                  </subNodes>
                </li>
              </subNodes>
            </li>
          </subNodes>
        </li>
        <li Class="ThinkNode_Subtree">
          <treeDef>Humanlike</treeDef>
        </li>
